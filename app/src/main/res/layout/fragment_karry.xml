<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="35dp"
    android:layout_marginLeft="35dp"
    android:layout_marginRight="35dp"
    android:background="@drawable/b"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.55dp"
        android:id="@+id/x1"
        android:background="#E60C558F"/>


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/liaotian"/>

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="智能小凯"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="45dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_2"
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:background="@drawable/yinle"/>

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="音乐"
                android:layout_marginLeft="18dp"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll2"
        android:layout_below="@id/ll1"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/weibo"/>

            <TextView
                android:id="@+id/tv3"
                android:text="小凯微博"
                android:textSize="16sp"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="45dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_4"
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:background="@drawable/tixing"/>

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小凯生日"
                android:textSize="16sp"
                android:singleLine="true"
                />
        </LinearLayout>
    </LinearLayout>







    <LinearLayout
        android:id="@+id/ll3"
        android:layout_below="@id/ll2"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <ImageView
                android:src="@drawable/riji"
                android:id="@+id/button_5"
                android:layout_width="70dp"
                android:layout_height="70dp" />


            <TextView
                android:id="@+id/ww"
                android:text="记事本🍓"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="45dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_6"
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:background="@drawable/add"/>

            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="尽请期待"
                android:textSize="16sp"
                android:singleLine="true"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
